generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gift {
  id String @id @default(uuid())
  name String
  description String
  image String
  price String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Participation {
  id String @id @default(uuid())
  userId String
  giftId String
  amount Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Guest {
  id String @id @default(uuid())
  firstName String
  lastName String
  email String
  eglise String
  cocktail String
  diner String
  brunch String
  diet String[]
  intolerances String[]
  other String?
  guests Json[]
  hebergement String?
  hebergement_details Json[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Hebergement {
  id String @id @default(uuid())
  value String
  description String
  price String
  quantity Int
}

model Product {
  id String @id @default(uuid())
  description String
  imageUrl String
  prix Float
  url String
  categorie String?
}

model Payment {
  id String @id @default(uuid())
  from String
  productId String
  amount Int
}